<h1>Listing codes</h1>

<table>
  <thead>
    <tr>
      <th><em>#</em></th>
      <th> | Name</th>
      <th> | Language</th>
      <th> | Ipaddress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @codes.first(10).each do |code| %>
      <tr>
        <td><%= @no %></td>
        <td> | <%= code.name %></td>
        <td> | <%= code.language %></td>
        <td> | <%= code.ipaddress %></td>
        <td> | <%= link_to 'Show', code %></td>
      </tr>
    <% @no += 1 %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Code', new_code_path %>
